{% extends 'base.html.twig' %}

{% block title %}Acceptation index{% endblock %}

{% block body %}
    <h1>Acceptation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for acceptation in acceptations %}
            <tr>
                <td>{{ acceptation.id }}</td>
                <td>{{ acceptation.name }}</td>
                <td>{{ acceptation.description }}</td>
                <td>
                    <a href="{{ path('acceptation_show', {'id': acceptation.id}) }}">show</a>
                    <a href="{{ path('acceptation_edit', {'id': acceptation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('acceptation_new') }}">Create new</a>
{% endblock %}
